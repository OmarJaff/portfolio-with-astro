---
interface Props {
  title: string;
}

const { title } = Astro.props;
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
---

<!doctype html>
<html lang="en" class="font-sans h-full antialiased">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Omar Jaff's Portfolio" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <!-- This controls the logic for changing the dark mode buttons appearance based on the users set preference -->
    <script is:inline>
      if (
        localStorage.theme === "dark" ||
        (!("theme" in localStorage) &&
          window.matchMedia("(prefers-color-scheme: dark)").matches)
      ) {
        document.documentElement.classList.add("dark");
        localStorage.theme = "dark";
      } else {
        document.documentElement.classList.remove("dark");
        localStorage.theme = "light";
      }
    </script>
  </head>
  <div class="bg-primary-white dark:bg-black">
    <div class="mx-auto max-w-7xl lg:px-8 md:pt-10">
      <Header />
      <body>
        <slot />
      </body>
      <Footer />
    </div>
  </div>


</html>
