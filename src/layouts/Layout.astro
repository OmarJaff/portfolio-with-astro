---
interface Props {
  title: string;
}

const { title } = Astro.props;
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
---

<!doctype html>
<html lang="en" class="bg-black font-sans h-full antialiased">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Omar Jaff's Portfolio" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <div class="mx-auto max-w-7xl lg:px-8 md:mt-4">
    <Header />
    <body>
      <slot />
    </body>
    <Footer />
  </div>


</html>
