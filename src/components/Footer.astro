---
import MenuItem from "./MenuItem.astro";

const MenuItems = [
  { title: "About", url: "/about" },
  { title: "Articles", url: "/articles" },
  { title: "Projects", url: "/projects" },
];
---

<footer class="mt-32 flex-none mx-auto max-w-7xl px-4 lg:px-8">
  <div
    class="border-t pb-16 pt-10 border-neutral-900 dark:border-neutral-100/30"
  >
    <div class="relative">
      <div class="px-4 sm:px-8">
        <div
          class="flex flex-col items-center justify-between gap-6 sm:flex-row"
        >
          <ul
            class="flex flex-wrap justify-center gap-x-6 gap-y-1 text-sm font-medium text-neutral-950 dark:text-zinc-200"
          >
            {
              MenuItems.map((item) => (
                <MenuItem
                  class="transition text-primary-black-base dark:text-white duration-100 md:hover:text-primary-gray-300"
                  title={item.title}
                  url={item.url}
                />
              ))
            }
          </ul><p class="text-sm text-neutral-500 dark:text-gray-primary-300">
