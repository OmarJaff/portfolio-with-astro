---
import Button from "./Button.astro";
import Menu from "./Menu.astro";
import MenuItem from "./MenuItem.astro";

const { class: ClassName } = Astro.props;
const currentPath = new URL(Astro.request.url).pathname;

const MenuItems = [
  { title: "Home", url: "/" },
  { title: "About", url: "/about" },
  { title: "Articles", url: "/articles" },
  { title: "Projects", url: "/projects" },
  { title: "Contact Us", url: "/contact" },
];
---

<script>
  import Alpine from "alpinejs";
  import focus from "@alpinejs/focus";

  Alpine.plugin(focus);
</script>

<div x-data="{ open: false }" class="flex justify-center">
  <Button
    @click="open = true"
    title="Menu"
    class="md:hidden rounded-full bg-primary-black-400 px-4 py-2 flex items-center gap-3"
  >
    <svg
      class="h-3 w-3 text-primary-gray-200"
      xmlns="http://www.w3.org/2000/svg"
      fill="none"
      viewBox="0 0 24 24"
      stroke-width="1.5"
      stroke="currentColor"
      class="w-6 h-6"
    >
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        d="M19.5 8.25l-7.5 7.5-7.5-7.5"></path>
    </svg>
  </Button>

  <Menu class="bg-primary-black-400">
    {
      MenuItems.map((item) => (
        <MenuItem
          class:list={[
            currentPath === item.url
              ? "md:bg-white md:rounded-full md:text-black border-b border-white"
              : "",
            "px-4 py-2 lg:px-6 lg:py-3 text-primary-gray-200 lg:font-medium text-sm lg:text-md",
          ]}
          title={item.title}
          url={item.url}
        />
      ))
    }
  </Menu>
</div>
