---
import Logo from "./Logo.astro";
import Navbar from "./Navbar.astro";
import SocialIcons from "./SocialIcons.astro";
import DarkModeToggler from "./DarkModeToggler.astro";
---

<div
  class="text-white flex-col md:flex justify-between px-4 sm:px-8 items-center"
>
  <div class="flex gap-x-4 md:gap-x-0 md:w-full md:justify-between">
    <div class="flex flex-col justify-center items-center w-full">
      <div class="flex w-full justify-between md:my-16 items-center gap-x-2">
        <div
          class="hidden md:flex bg-primary-black-base dark:bg-secondary-black px-4 py-2.5 lg:px-6 rounded-full"
        >
          <SocialIcons />
        </div>

        <div
          class="relative flex w-full justify-between md:flex-none md:w-auto items-center"
        >
          <Logo
            class="text-primary-black-base font-extrabold dark:text-white md:absolute md:bottom-20 md:w-full md:justify-center items-baseline"
          />
          <Navbar
            class="bg-primary-black-base dark:bg-secondary-black/80 p-1"
          />
        </div>

        <DarkModeToggler
          class="bg-primary-black-base dark:bg-secondary-black w-16 h-[10.5] justify-center py-2.5 rounded-full transition duration-100 md:hover:text-primary-gray-300 flex"
        />
      </div>
    </div>
  </div>
</div>
