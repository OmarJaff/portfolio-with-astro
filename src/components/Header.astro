---

import Logo from "./Logo.astro";
import Menu from "./Menu.astro";
import Button from "./Button.astro";

---

<div class="text-white flex justify-between px-4 mt-6 items-baseline">
    
    <div>
        <Logo class="text-white w-[80px]"></Logo>
    </div>

    <div class="flex gap-4 items-center">
        <div>
            <Button title="Menu" class="rounded-full bg-primary-black-400 px-4 py-2 flex items-center gap-3">
                <svg class="h-3 w-3 text-primary-gray-200" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 8.25l-7.5 7.5-7.5-7.5" />
                  </svg>
                  
            </Button>
        </div>
        <div>
            <Button hasTitle={false} class="bg-primary-black-400 px-4 py-2 rounded-full" >
                <svg class="h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M21.752 15.002A9.718 9.718 0 0118 15.75c-5.385 0-9.75-4.365-9.75-9.75 0-1.33.266-2.597.748-3.752A9.753 9.753 0 003 11.25C3 16.635 7.365 21 12.75 21a9.753 9.753 0 009.002-5.998z" />
                  </svg>
                  
            </Button>
        </div>
    </div>
</div>